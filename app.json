{
  "scripts": {
    "postdeploy": "make data"
  },
  "env": {
    "PIPENV_COLORBLIND" : {
      "value": "true"
    },
    "PIPENV_NOSPIN" : {
      "value": "true"
    },
    "PIPENV_VENV_IN_PROJECT" : {
      "value": "true"
    },
    "VIRTUAL_ENV": {
      "value": "/app/.heroku/python"
    },

    "AUTH_TOKEN": {
      "value": "review"
    },
    "BUGSNAG_API_KEY": {
      "required": true
    },
    "FLASK_ENV": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SENDGRID_DEFAULT_FROM": {
      "required": true
    },
    "WEB_CONCURRENCY": {
      "value": "4"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/jacebrowning/heroku-buildpack-pipenv.git#0057b47294fd4d8c8877b7d4f724f5c58f5b7406"
    }
  ],
  "addons": [
    "mongolab",
    "sendgrid"
  ]
}
