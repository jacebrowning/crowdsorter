{
  "name":"crowdsorter",
  "scripts":{
    "postdeploy": "make data"
  },
  "env":{
    "VIRTUAL_ENV": {
      "value": "heroku"
    },
    "FLASK_ENV": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "AUTH_TOKEN": {
      "value": "review"
    },
    "WEB_CONCURRENCY": {
      "value": "4"
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SENDGRID_DEFAULT_FROM": {
      "required": true
    }
  },
  "addons":[
    "mongolab",
    "sendgrid",
    "papertrail"
  ]
}
