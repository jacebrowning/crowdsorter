{
  "scripts": {
    "postdeploy": "make data"
  },
  "env": {
    "VIRTUAL_ENV": {
      "value": "heroku"
    },

    "AUTH_TOKEN": {
      "value": "review"
    },
    "FLASK_ENV": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SENDGRID_DEFAULT_FROM": {
      "required": true
    },
    "WEB_CONCURRENCY": {
      "value": "4"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/jacebrowning/heroku-buildpack-pipenv"
    }
  ],
  "addons":[
    "mongolab",
    "sendgrid"
  ]
}
